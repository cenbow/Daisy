				return false;
			}
			$.getJSON(url,function(data){
				if(data.success){
					$.xDialog({
                        content:"恭喜您，领取成功！点击<a class='u-gm-success' href='$root_url/coupon/profitCouponList'"+
                            " target='_blank'>查看收益券</a>",
