					if(data.resultCodeEum[0].code == 90721){
                        $.xDialog({
                            content: "活动还未开始呢，先去看看<a class='u-gm-success' href='$root_url/products/list-all-all-all-1-createTimeDesc-1.html'" +
                            " target='_blank'>投资项目</a>吧！" });
					}else{
						$.xDialog({content:data.resultCodeEum[0].msg});
					}
				}
			});			
		})
