<script type="text/javascript">
    $("#j-imgcontent").on("click", 'img', function () {
        var width = $(this).width();
        if (width <= 500) {
            if (width == 345) {
                $(this).width(660)
                $(this).css('top', 100)
                $(this).css('margin-left', -330)
            } else if (width == 252) {
                $(this).width(600)
                $(this).css('top', -10)
                $(this).css('margin-left', -300)
            } else if (width == 250) {
                $(this).width(700)
                $(this).css('top', 200)
                $(this).css('margin-left', -350)
            } else if (width == 135) {
                $(this).width(520)
                $(this).css('top', 100)
                $(this).css('margin-left', -260)
            }
            $(this).addClass('u-img-larger')
            $('.u-shade-cover').show()
        } else {
            if (width == 660) {
                $(this).width(345)
            } else if (width == 600) {
                $(this).width(252)
            } else if (width == 700) {
                $(this).width(250)
            } else if (width == 520) {
                $(this).width(135)
            }
            $(this).removeClass('u-img-larger')
            $('.u-shade-cover').hide()
            $(this).css('margin-left', 'auto')
            $(this).css('top', 0)
        }
    });

</script>
